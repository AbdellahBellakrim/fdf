			────────────────────────────────────────────── \n"
	@rm -rf $(OBJ)
	@make -C ./libft
	@$(CC) $(CFlAGS) $(FRAMEWORKS) $(B_OBJ) ./libft/libft.a -o $(B_NAME)
	
fclean : clean

	@rm -rf $(NAME)
	@rm -rf $(B_NAME)
	@make fclean -C ./libft
clean :
	@rm -rf $(OBJ)
	@rm -rf $(B_OBJ)
	@make clean -C ./libft
	
re : fclean all 
	
.PHONY : clean fclean all re bonus
