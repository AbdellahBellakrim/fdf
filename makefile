			────────────────────────────────────────────── \n"
	@rm -rf $(B_OBJ)
	@make -C ./libft
	@$(CC) $(CFlAGS) $(FRAMEWORKS) $(OBJ) ./libft/libft.a -o $(NAME) 
	
bonus : $(B_OBJ)
	@echo " \
			──────────────────────────────────────────────\n\
			─██████████████─████████████───██████████████─\n\
			─██░░░░░░░░░░██─██░░░░░░░░████─██░░░░░░░░░░██─\n\
			─██░░██████████─██░░████░░░░██─██░░██████████─\n\
			─██░░██─────────██░░██──██░░██─██░░██─────────\n\
			─██░░██████████─██░░██──██░░██─██░░██████████─\n\
			─██░░░░░░░░░░██─██░░██──██░░██─██░░░░░░░░░░██─\n\
			─██░░██████████─██░░██──██░░██─██░░██████████─\n\
			─██░░██─────────██░░██──██░░██─██░░██─────────\n\
			─██░░██─────────██░░████░░░░██─██░░██─────────\n\
